<Window x:Class="Template4333._4333_KhokhlovAlexey"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Template4333"
        mc:Ignorable="d"
        Title="_4333_KhokhlovAlexey" Height="450" Width="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="11*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid>
            <TextBlock HorizontalAlignment="Left" Margin="50,10,0,0" VerticalAlignment="Top" >Алексей, 18 лет</TextBlock>
        </Grid>
        <UniformGrid Grid.Row="0" Columns="4">
            <Button x:Name="BnImport" Click="BnImport_Click" Width="150" Height="20" HorizontalAlignment="Left">Импорт данных</Button>

            <Button x:Name="BnExport" Click="BnExport_Click" Width="150" Height="20" HorizontalAlignment="Left" >Экспорт данных</Button>
            <Button x:Name="BnImportJS" Click="BnImportJS_Click" Width="150" Height="20" HorizontalAlignment="Left">Импорт JSON</Button>

            <Button x:Name="BnExportWord" Click="BnExportWord_Click" Width="150" Height="20" HorizontalAlignment="Left" Margin="0,8,0,0" VerticalAlignment="Top" >Экспорт Word</Button>
        </UniformGrid>
    </Grid>

</Window>
